{
    "name": "ycTest",
    "version": "1.0.0",
    "description": "rollup模板",
    "main": "./src/main.ts",
    "scripts": {
        "bootstrap": "pnpm install && pnpm run husky",
        "dev": "rollup -c config/rollup.config.dev.js --watch && npm run build:types",
        "build": "npm run build:types && rollup -c config/rollup.config.build.js",
        "build:types": "tsc",
        "prettier": "prettier --write",
        "husky": "husky install",
        "eslint": "eslint --ext .js,.ts --ignore-path .gitignore --fix src",
        "lint": "eslint --ext src/**/*.{js,ts} --quiet",
        "lint:fix": "eslint --cache --max-warnings 0 src/**/*.{ts,tsx}",
        "lint:prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
        "lint:stylelint": "stylelint --cache --fix \"**/*.{less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
        "lint:lint-staged": "lint-staged -c ./.husky/lintstagedrc.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Yanchongmiao/template-rollup.git"
    },
    "engines": {
        "node": "^12 || >=14"
    },
    "keywords": [
        "rollup",
        "rollup-template",
        "template",
        "typescript"
    ],
    "author": {
        "name": "rollup-template",
        "email": "xxx@xxx.com",
        "url": "https://github.com/Yanchongmiao/template-rollup.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Yanchongmiao/template-rollup/issues"
    },
    "bin": {
        "ycTest": "./src/main.ts"
    },
    "homepage": "https://github.com/Yanchongmiao/template-rollup#readme",
    "devDependencies": {
        "@babel/core": "^7.18.5",
        "@babel/preset-env": "^7.18.2",
        "@commitlint/cli": "^17.0.2",
        "@commitlint/config-conventional": "^17.0.2",
        "@rollup/plugin-alias": "^3.1.9",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-eslint": "^8.0.2",
        "@rollup/plugin-image": "^2.1.1",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.3.3",
        "@types/lodash": "^4.14.182",
        "@types/react": "^18.0.14",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "@vue/compiler-sfc": "^3.2.37",
        "autoprefixer": "^10.4.7",
        "commitizen": "^4.2.4",
        "commitlint-config-cz": "^0.13.3",
        "cssnano": "^5.1.11",
        "cz-conventional-changelog": "^3.3.0",
        "cz-customizable": "^6.3.0",
        "dtsmake": "^0.0.10",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-vue": "^9.1.1",
        "husky": "^8.0.1",
        "install": "^0.13.0",
        "lint-staged": "^12.3.4",
        "lodash": "^4.17.21",
        "postcss": "^8.4.14",
        "postcss-html": "^1.3.0",
        "postcss-less": "^6.0.0",
        "postcss-nested": "^5.0.6",
        "postcss-preset-env": "^7.7.1",
        "postcss-simple-vars": "^6.0.3",
        "prettier": "^2.6.2",
        "rollup": "^2.75.6",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-clear": "^2.0.7",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-dev": "^2.0.4",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-less": "^1.1.3",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-postcss": "^4.0.2",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-serve": "^1.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-vue": "^6.0.0",
        "stylelint": "^14.5.3",
        "stylelint-config-html": "^1.0.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended": "^7.0.0",
        "stylelint-config-recommended-vue": "^1.3.0",
        "stylelint-config-standard": "^25.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-prettier": "^2.0.0",
        "tslib": "^2.4.0",
        "typescript": "^4.7.3",
        "vue-template-compiler": "^2.6.14"
    },
    "lint-staged": {
        "*.{ts,tsx,vue,jx}": [
            "eslint --fix",
            "git add"
        ],
        "*.{js,ts,tsx,vue,less,css,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        }
    }
}
